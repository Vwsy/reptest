<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="logining"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintRight_toRightOf="@+id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <ImageView
        android:id="@+id/user_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/ic_baseline_perm_identity_24"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/pwd_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/icon"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/ic_baseline_lock_open_24"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <EditText
        android:id="@+id/user_text"
        android:layout_width="269dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/user_icon"
        app:layout_constraintTop_toTopOf="@id/user_icon"
        android:layout_marginLeft="40dp"
        android:hint="请输入账号"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />

    <EditText
        android:id="@+id/pwd_text"
        android:layout_width="269dp"
        android:layout_height="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/pwd_icon"
        app:layout_constraintTop_toTopOf="@id/pwd_icon"
        android:layout_marginLeft="40dp"
        android:hint="请输入密码"
        android:paddingTop="0dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields" />

    <Button
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields"
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:background="@color/teal_700"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/pwd_text"
        app:layout_constraintTop_toTopOf="@id/pwd_text" />

</androidx.constraintlayout.widget.ConstraintLayout>