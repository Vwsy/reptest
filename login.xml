<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="登录页面"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/icon"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:layout_marginTop="64dp"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="TODO"
        tools:ignore="ContentDescription,HardcodedText" />

    <TextView
        android:id="@+id/user_id"
        android:text="学号："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/icon"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/user_pwd"
        android:text="密码："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/user_id"
        tools:ignore="HardcodedText,RtlHardcoded"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/text_userid"
        android:layout_width="269dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:digits="0123456789"
        android:hint="请输入学号"
        android:paddingTop="0dp"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields"
        app:layout_constraintLeft_toRightOf="@+id/user_id"
        app:layout_constraintTop_toTopOf="@id/user_id" />

    <EditText
        android:id="@+id/text_userpwd"
        android:layout_width="269dp"
        android:layout_height="32dp"
        android:layout_marginLeft="20dp"
        android:hint="请输入密码"
        android:paddingTop="0dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="18sp"
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields"
        app:layout_constraintLeft_toRightOf="@+id/user_pwd"
        app:layout_constraintTop_toTopOf="@id/user_pwd" />


    <Button
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields"
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/text_userpwd"
        app:layout_constraintTop_toTopOf="@id/text_userpwd" />

    <Button
        tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextFields"
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="96dp"
        android:text="注册"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="@id/text_userpwd"
        app:layout_constraintTop_toTopOf="@id/text_userpwd" />

</androidx.constraintlayout.widget.ConstraintLayout>